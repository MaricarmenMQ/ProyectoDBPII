    <!-- ingresos este mes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/fondo_tarjeta"
        android:elevation="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ingresos este mes:"
            android:textSize="16sp"
            android:textColor="@color/texto_primario" />

        <TextView
            android:id="@+id/texto_ingresos_este_mes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/verde_ingresos" />

        <TextView
            android:id="@+id/texto_porcentaje_ingresos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0%"
            android:textSize="14sp"
            android:textColor="@color/texto_secundario" />

    </LinearLayout>

    <!-- gastos este mes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/fondo_tarjeta"
        android:elevation="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
