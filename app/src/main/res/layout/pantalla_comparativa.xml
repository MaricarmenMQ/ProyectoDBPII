            android:layout_height="wrap_content"
            android:text="S/ 0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/rojo_gastos" />

        <TextView
            android:id="@+id/texto_porcentaje_gastos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0%"
            android:textSize="14sp"
            android:textColor="@color/texto_secundario" />

    </LinearLayout>

    <!-- diferencia -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/fondo_tarjeta"
        android:elevation="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="diferencia:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/texto_primario" />

        <TextView
            android:id="@+id/texto_diferencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/ 0.00"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/verde_ingresos" />

    </LinearLayout>

