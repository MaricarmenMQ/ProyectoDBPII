<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/fondo_claro">

    <!-- título principal -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="📊 panel de estadísticas"
        android:textAlignment="center"
        android:textColor="@color/azul_primario"
        android:textSize="26sp"
        android:textStyle="bold" />

    <!-- balance total -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/fondo_tarjeta"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="balance total"
            android:textColor="@color/texto_secundario"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/texto_balance_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S/ 0.00"
            android:textColor="@color/verde_ingresos"
            android:textSize="32sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- fila de ingresos y gastos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- ingresos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/fondo_tarjeta"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💰 ingresos"
                android:textColor="@color/texto_secundario"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/texto_ingresos_totales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S/ 0.00"
                android:textColor="@color/verde_ingresos"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- gastos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/fondo_tarjeta"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💸 gastos"
                android:textColor="@color/texto_secundario"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/texto_gastos_totales"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S/ 0.00"
                android:textColor="@color/rojo_gastos"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- contador de transacciones -->
    <TextView
        android:id="@+id/texto_cantidad_transacciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="0 transacciones este mes"
        android:textAlignment="center"
        android:textColor="@color/texto_secundario"
        android:textSize="14sp" />

    <!-- título de botones -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="📈 análisis detallados"
        android:textColor="@color/texto_primario"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- botones -->
    <Button
        android:id="@+id/boton_ingresos_vs_gastos"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/azul_primario"
        android:text="📊 ingresos vs gastos"
        android:textSize="16sp" />

    <Button
        android:id="@+id/boton_analisis_categorias"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/naranja_categoria"
        android:text="🏷️ análisis por categorías"
        android:textSize="16sp" />

    <Button
        android:id="@+id/boton_configurar_presupuesto"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/morado_presupuesto"
        android:text="🎯 configurar presupuestos"
        android:textSize="16sp" />

    <Button
        android:id="@+id/boton_tendencias"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/acento"
        android:text="📈 tendencias y patrones"
        android:textSize="16sp" />

</LinearLayout>