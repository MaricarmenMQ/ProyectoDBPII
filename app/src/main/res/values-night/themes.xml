<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema oscuro de la aplicaciÃ³n -->
    <style name="Theme.PocketPet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/color_primario_night</item>
        <item name="colorPrimaryVariant">@color/color_primario_oscuro_night</item>
        <item name="colorSecondary">@color/color_secundario_night</item>
        <item name="colorAccent">@color/color_acento_night</item>

        <!-- Colores de superficie y fondo -->
        <item name="android:colorBackground">@color/fondo_primario_night</item>
        <item name="colorSurface">@color/fondo_card_night</item>

        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/texto_primario_night</item>
        <item name="android:textColorSecondary">@color/texto_secundario_night</item>
        <item name="colorOnPrimary">@color/texto_sobre_color</item>
        <item name="colorOnSurface">@color/texto_primario_night</item>

        <!-- Estados y controles -->
        <item name="colorError">@color/color_error_night</item>
        <item name="colorOnError">@color/texto_sobre_color</item>
        <item name="colorControlActivated">@color/color_primario_night</item>
        <item name="colorControlHighlight">@color/ripple_night</item>

        <!-- Barra de estado -->
        <item name="android:statusBarColor">@color/fondo_primario_night</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <!-- Estilo para botones primarios (heredado del tema principal) -->
    <style name="Boton.Primario" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_primario_night</item>
        <item name="android:textColor">@color/texto_sobre_color</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilo para botones secundarios (heredado del tema principal) -->
    <style name="Boton.Secundario" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/color_secundario_night</item>
        <item name="android:textColor">@color/color_secundario_night</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>