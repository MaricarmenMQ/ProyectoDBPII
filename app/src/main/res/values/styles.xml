<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Textos -->
    <style name="Texto.Titulo">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/texto_primario</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Texto.Subtitulo">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/texto_primario</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Texto.Cuerpo">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/texto_primario</item>
    </style>

    <style name="Texto.Cuerpo.Secundario">
        <item name="android:textColor">@color/texto_secundario</item>
    </style>

    <style name="Texto.Pequeño">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/texto_secundario</item>
    </style>

    <style name="Texto.Monto">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/texto_primario</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Texto.Monto.Ingreso">
        <item name="android:textColor">@color/color_ingreso</item>
    </style>

    <style name="Texto.Monto.Gasto">
        <item name="android:textColor">@color/color_gasto</item>
    </style>

    <style name="Texto.Cambio">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Texto.Cambio.Positivo">
        <item name="android:textColor">@color/color_ingreso</item>
    </style>

    <style name="Texto.Cambio.Negativo">
        <item name="android:textColor">@color/color_gasto</item>
    </style>

    <!-- Botones -->
    <style name="Boton.Primario" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/color_primario</item>
        <item name="android:textColor">@color/texto_sobre_color</item>
    </style>

    <style name="Boton.Secundario" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/color_primario</item>
        <item name="android:textColor">@color/color_primario</item>
    </style>

    <style name="Boton.Texto" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_primario</item>
    </style>

    <style name="Boton.Ingreso" parent="Boton.Primario">
        <item name="backgroundTint">@color/color_ingreso</item>
    </style>

    <style name="Boton.Gasto" parent="Boton.Primario">
        <item name="backgroundTint">@color/color_gasto</item>
    </style>

    <!-- Cards -->
    <style name="Card.Base" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="Card.Estadistica" parent="Card.Base">
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Card.Transaccion" parent="Card.Base">
        <item name="contentPadding">12dp</item>
    </style>

    <style name="Card.Categoria" parent="Card.Base">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Card.Presupuesto" parent="Card.Base">
        <item name="contentPadding">16dp</item>
    </style>

    <style name="Card.Meta" parent="Card.Base">
        <item name="contentPadding">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Chips -->
    <style name="Chip.Periodo" parent="Widget.Material3.ChipGroup">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Chip.Categoria" parent="Widget.MaterialComponents.ChipGroup">
        <item name="chipIconEnabled">true</item>
        <item name="chipIconSize">20dp</item>
    </style>

    <!-- Barra progreso -->
    <style name="BarraProgreso">
        <item name="android:layout_height">8dp</item>
        <item name="android:progressDrawable">@drawable/progress_bar</item>
    </style>

    <style name="BarraProgreso.Verde">
        <item name="android:progressTint">@color/presupuesto_bajo</item>
    </style>

    <style name="BarraProgreso.Amarillo">
        <item name="android:progressTint">@color/presupuesto_medio</item>
    </style>

    <style name="BarraProgreso.Rojo">
        <item name="android:progressTint">@color/presupuesto_alto</item>
    </style>

    <!-- Íconos -->
    <style name="Icono.Categoria">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Icono.Pequeno">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="Icono.Grande">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Divisores -->
    <style name="Divisor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divisor</item>
    </style>

    <style name="Divisor.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Contenedores -->
    <style name="Contenedor.Scroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="Contenedor.Columna">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Contenedor.Fila">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Inputs -->
    <style name="Input.Base" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="Input.Monto" parent="Input.Base">
        <item name="prefixText">S/ </item>
    </style>

    <!-- Diálogos -->
    <style name="Dialog.Base" parent="Theme.AppCompat.Dialog">
        <item name="android:padding">24dp</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="BottomSheet.Base" parent="Widget.Material3.BottomSheet">
        <item name="android:padding">16dp</item>
    </style>

    <!-- Badges -->
    <style name="Badge.Pequeño">
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:background">@drawable/badge_circle</item>
    </style>

    <style name="Badge.Ingreso">
        <item name="android:backgroundTint">@color/color_ingreso</item>
    </style>

    <style name="Badge.Gasto">
        <item name="android:backgroundTint">@color/color_gasto</item>
    </style>

    <!-- Tabs -->
    <style name="Tab.Base" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/color_primario</item>
        <item name="tabSelectedTextColor">@color/color_primario</item>
        <item name="tabTextColor">@color/texto_secundario</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <!-- RecyclerView -->
    <style name="RecyclerView.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>
